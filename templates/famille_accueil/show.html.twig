{% extends 'base.html.twig' %}

{% block title %}FamilleAccueil
{% endblock %}

{% block body %}
	<main class="flex ">

		<section class="mx-auto">

				<div class=" p-4 text-center text-2xl rounded cursor-pointer">
					<p class="border-b-4 text-4xl mt-6 font-bold">
						Détails sur {{ famille_accueil.prenom ?? ""}}
					{{ famille_accueil.nom ?? ""}}
						<span class="material-icons">pets</span>
					</p>
				</div>
                {# Name of the animal #}
           <div class="flex flex-col p-4 sm:flex-row">
                    <figure class="flex flex-col max-w-2xl p-4">
                             <div class="rounded-md border-8 border-green-blue max-w-xl ">
                                <img class="w-full"  src="https://images.pexels.com/photos/6864965/pexels-photo-6864965.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" alt="dog-cat-home">
                            </div>
                            <figcaption class="text-center text-xl m-4">
                                <h2 class="text-center font-bold text-xl">Commentaire :</h2>
                                <p>{{famille_accueil.commentaire }}</p>
                            </figcaption> 
                    </figure>

                 {#image of the animal #}
				
			

			<div class="flex flex-col p-4  items-center justify-center">
                {#details and the button of the animal #}
                    <div class="flex items-center justify-around">
                        <table class="table-auto flex justify-around">
                        <tbody  class="table-auto text-center text-xl">
						<tr>
							<th class="pt-2 m-1 text-left">Id</th>
							<td>{{ famille_accueil.id }}</td>
						</tr>
						<tr>
							<th class="pt-2 m-1 text-left">Nom :</th>
							<td>{{ famille_accueil.nom }}</td>
						</tr>
						<tr>
							<th class="pt-2 m-1 text-left">Prénom :</th>
							<td>{{ famille_accueil.prenom }}</td>
						</tr>
						<tr>
							<th class="pt-2 m-1 text-left">Adresse :</th>
							<td>{{ famille_accueil.adresse }}</td>
						</tr>
						<tr>
							<th class="pt-2 m-1 text-left">Code postal :</th>
							<td>{{ famille_accueil.codePostal }}</td>
						</tr>
						<tr>
							<th class="pt-2 m-1 text-left">Ville :</th>
							<td>{{ famille_accueil.ville }}</td>
						</tr>
						
						<tr>
							<th class="pt-2 m-1 text-left">Email :</th>
							<td>{{ famille_accueil.email }}</td>
						</tr>
						<tr>
							<th class="pt-2 m-1 text-left">Téléphone :</th>
							<td>{{ famille_accueil.telephone }}</td>
						</tr>
                        <tr>
							<th class="pt-2 m-1 text-left">Espèces accueillies :</th>
							{% for espece in famille_accueil.especes %}
			
				            <td class="">{{ espece.type}}</td>
			
			                {% endfor %}
						</tr>
                        <tr>
							<th class="pt-2 m-1 text-left">Animaux actuellement accueillis :</th>
                             <td class=""></td>
                        </tr>
                        <tr class="">
                            	<th >Espèce :</th>
				               
                                
						{% for animal in famille_accueil.animaux %}
			    
				<td class="">{{ animal.espece.type }}</td>
				
		
			        {% endfor %}
						</tr>
                        <tr class="">
                         <th>Nom :</th>
                        {% for animal in famille_accueil.animaux %}
			    
				
				<td class="">{{ animal.nom }}</td>
		
			        {% endfor %}
                        </tr>
					</tbody>
				</table>



</div >	

			<div class="flex flex-row p-4">
                           <div class="flex flex-col p-4">
				<a class="text-sm font-bold leading-none text-white " href="{{ path('app_famille_accueil_edit', {'id': famille_accueil.id}) }}">
					<button class="bg-white rounded p-4 text-md font-normal leading-none text-black border-double border-2 border-black shadow-lg shadow-green-blue  hover:bg-green-blue  hover:-translate-y-1 hover:scale-110 hover:text-white font-bold">Modifier</button>
				</a>
                 </div>
                         <div class="flex flex-col p-4">

				<a href="{{ path('app_famille_accueil_index') }}" class="relative shadow-lg shadow-green-blue inline-flex items-center justify-center p-4 px-6 py-3 overflow-hidden font-medium text-black transition duration-300 ease-out border-2 border-black rounded-xl shadow-md group">
					<span class="absolute inset-0 flex items-center justify-center w-full h-full text-white duration-300 -translate-x-full bg-green-blue group-hover:translate-x-0 ease">
						<svg class=" h-8 w-8 text-black-500" fill="none" viewbox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
						</svg>
					</span>
					<span class="absolute flex items-center justify-center w-full h-full text-black transition-all duration-300 transform group-hover:translate-x-full ease">Retour</span>
					<span class="relative invisible">Retour</span>
				</a>
			 </div>
                  
                    </div>
              {#buttons #}
			{#{ include('famille_accueil/_delete_form.html.twig') }#}

 </div> 
		</div>
	</section>
</main>{% endblock %}
