<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}1000-Moustaches
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>


	<body>
		<header class="border-4 border-b-violet ">
			<div class="relative bg-white">

				<div class=" px-4 sm:px-6">
					<div class="flex justify-between items-center border-b-2 py-6 md:justify-start md:space-x-10">
						<div class="flex justify-start lg:w-0 lg:flex-1">
							<img class="h-20 w-auto trans" src=" {{ asset('build/images/petit-logo.png') }} " alt=" logo-association">
						</div>
						<div class="mr-2 sm-my-2 hidden md:block">
							<img class="h-20 w-auto justify-center trans" src=" {{ asset('build/images/moustaches.png') }} " alt=" titre-association">
						</div>

						

						{# {% if (app_user)%} #}

						<div class="md:flex items-center justify-end md:flex-1 sm-flex-direction-row">
  						  {# <ul> #}
    							<!-- Profile dropdown -->
					<div class="ml-3 relative btn trans">
 							 <button id="user-menu" aria-label="User menu" aria-haspopup="true">
     										<p>Bienvenue User!</p>
  							</button>
  					<div id="user-menu-dropdown" class="menu-hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg">
   					 <div
     						 class="py-1 rounded-md bg-white shadow-xs"
     												 role="menu"
      						aria-orientation="vertical"
      						aria-labelledby="user-menu"
   								 >
     							 <a href="#" class="block px-4 py-2 text-sm leading-5 text-gray-700 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 transition duration-150 ease-in-out"
       							 role="menuitem" > Profile</a>
     
      							<a href="{{ path('app_logout') }}"class="block px-4 py-2 text-sm leading-5 text-gray-700 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 transition duration-150 ease-in-out"
       							 role="menuitem"
      								> Déconnexion</a>
    									</div>
  									</div>
					</div>
    						{# </ul> #}
    							
						</div>


						{# {% endif %} #}
					</div>
				</div>

			</div>
		</header>
		{% block body %}{% endblock %}
		<footer>
			<div class="w-full">
				<img class="animate-bounce w-full" src=" {{ asset('build/images/banniere.png') }} " alt="banniere-association">
			</di</footer>
		</body>
	</body>
</html>
