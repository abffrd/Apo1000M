<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}1000-Moustaches
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>


	<body>
		<header class="border-4 border-b-violet ">
			<div class="relative bg-white">

				<div class=" px-4 sm:px-6">
					<div class="flex justify-between items-center border-b-2 py-6 md:justify-start md:space-x-10">
						<div class="flex justify-start lg:w-0 lg:flex-1">
							<img class="h-20 w-auto trans" src=" {{ asset('build/images/petit-logo.png') }} " alt=" logo-association">
						</div>
						<div class="mr-2 sm-my-2 hidden md:block">
							<img class="h-20 w-auto justify-center trans" src=" {{ asset('build/images/moustaches.png') }} " alt=" titre-association">
						</div>

						{# {% if (app_user)%} #}

						<div class="md:flex items-center justify-end md:flex-1 sm-flex-direction-row text-left">
							<div>
								<button type="button" class="trans btn" id="menu-button" aria-expanded="true" aria-haspopup="true">
									Prénom Nom
									<!-- Heroicon name: solid/chevron-down -->
									<svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20" fill="currentColor" aria-hidden="true">
										<path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
									</svg>
								</button>
							</div>

							<!--
														    Dropdown menu, show/hide based on menu state.
														
														    Entering: "transition ease-out duration-100"
														      From: "transform opacity-0 scale-95"
														      To: "transform opacity-100 scale-100"
														    Leaving: "transition ease-in duration-75"
														      From: "transform opacity-100 scale-100"
														      To: "transform opacity-0 scale-95"
														  -->
							<div class="origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 divide-y divide-gray-100 focus:outline-none hidden" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
								<div
									class="py-1" role="none">
									<!-- Active: "bg-gray-100 text-gray-900", Not Active: "text-gray-700" -->
									<a href="#" class="text-gray-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-0">Compte</a>
								</div>
								<div class="py-1" role="none">
									<a href="{{ path('app_logout') }}" class="text-gray-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-6">Déconnexion</a>
								</div>
							</div>
						</div>

						{# {% endif %} #}
					</div>
				</div>

			</div>
		</header>
		{% block body %}{% endblock %}
		<footer>
			<div class="w-full">
				<img class="animate-bounce w-full" src=" {{ asset('build/images/banniere.png') }} " alt="banniere-association">
			</di</footer>
		</body>
	</body>
</html>
