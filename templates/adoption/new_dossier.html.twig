{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle adoption{% endblock %}

{% block body %}
	<main class="flex ">

		<aside class="h-screen w-full xl:w-2/4 hidden lg:w-11/12 hidden xl:block lg:block lg:w-full h-screen md:hidden sm:hidden sm:w-full h-screen">
			<img class="max-w-full" src=" {{ asset('build/images/chatons.png') }} " alt="chatons">
		</aside>

		<section class="mx-auto">

			<div class="flex flex-col p-4 ">

				<div class=" p-4 text-center text-2xl rounded cursor-pointer">
					<p class="border-b-4 text-4xl mt-6 font-bold">
						Créer une nouvelle adoption
						<span class="material-icons">pets</span>
					</p>
				</div>
                    <div>
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="bg-blue-100 border-t border-b border-blue-500 text-blue-700 px-4 py-3" role="alert">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                <div class="flex flex-col justify-center text-center items-center sm:flex-row">


                    <form class="m-10 flex flex-col justify-between" action="" method="get">
                    <div class="mt-5">
                        <p> N° de téléphone : <input class="mt-10 rounded-md" type="text" name="phone" /></p></div>
                    <div class="mt-10 bg-white rounded p-4 text-md font-normal leading-none text-black border-double border-2 border-black shadow-lg shadow-green-blue  hover:bg-green-blue  hover:-translate-y-1 hover:scale-110 hover:text-white font-bold"><input class="md-5" type="submit" name="submit" /></div>

                    </form>
                </div>
                    <a class="btn mt-10" href="{{ path('app_adoption_index') }}">Retour à la liste</a> 
                
            </div>
		</section>
	</main>
{% endblock %}
