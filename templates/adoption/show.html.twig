{% extends 'base.html.twig' %}

{% block title %}Adoption
{% endblock %}

{% block body %}
	<main class="flex ">
		<aside class="h-screen w-full xl:w-2/4 hidden lg:w-11/12 hidden xl:block lg:block lg:w-full h-screen md:hidden sm:hidden sm:w-full h-screen">
			<img class="max-w-full p-10 m-20 md:m-10 pt-20 mt-20" src="https://images.pexels.com/photos/6864965/pexels-photo-6864965.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" alt="dog-cat-home">
		</aside>

		<section class="mx-auto">

				<div class=" p-4 text-center text-2xl rounded cursor-pointer">
					<p class="border-b-4 text-4xl mt-6 font-bold">
						Détails sur une adoption
						<span class="material-icons">pets</span>
					</p>
				</div>
       <!-- ************************header table*********************** -->
 <div class="flex p-4">

    <table class="table-auto text-left">

					<tbody>
						<tr>
							<th>Statut de l'adoption</th>
							<td>{{ adoption.statut}}</td>
						</tr>

						<tr>
							<th>Adoptant</th>
							<td>{{ adoption.adoptant.prenom}} {{ adoption.adoptant.nom}}</td>
						</tr>
						<tr>
							<th>Adresse de l'adoptant</th>
							<td>{{ adoption.adoptant.adresse}} {{ adoption.adoptant.nom}}</td>
						</tr>
						</tr>
							<th></th>
							<td>{{ adoption.adoptant.codePostal}} {{ adoption.adoptant.ville}}</td>
						</tr>
						<tr>
							<th>Contact</th>
							<td>{{ adoption.adoptant.email}}</td>
						</tr>
						</tr>
							<th></th>
							<td>{{ adoption.adoptant.telephone}}</td>
						</tr>

						<tr>
							<th>Date d'appel</th>
							<td>{{ adoption.dateAppel ? adoption.dateAppel|date('Y-m-d') : '' }}</td>
						</tr>
						<tr>
							<th>Compte rendu de l'appel</th>
							<td>{{ adoption.compteRendu }}</td>
						</tr>
						<tr>
							<th>Animal-aux réservé-s</th>
							<td>//boucle à faire//</td>
						</tr>
						<tr>
							<th>Remarque</th>
							<td>{{ adoption.remarque }}</td>
						</tr>
						<tr>
							<th>Bénévoles en charge du dossier</th>
							<td>//boucle à faire//</td>
						</tr>


					</tbody>
				</table>
    		</div >

    <div class="flex justify-between m-2">
                <a class="text-sm font-bold leading-none text-white " href="{{ path('app_adoption_edit', {'id': adoption.id}) }}">
                <button class="bg-white rounded p-4 text-md font-normal leading-none text-black border-double border-2 border-black shadow-lg shadow-green-blue  hover:bg-green-blue  hover:-translate-y-1 hover:scale-110 hover:text-white font-bold">Modifier</button>
                </a>

                <a href="{{ path('app_adoption_index') }}" class="relative shadow-lg shadow-green-blue inline-flex items-center justify-center p-4 px-6 py-3 overflow-hidden font-medium text-black transition duration-300 ease-out border-2 border-black rounded-xl shadow-md group">
               <span class="absolute inset-0 flex items-center justify-center w-full h-full text-white duration-300 -translate-x-full bg-green-blue group-hover:translate-x-0 ease">
                <svg class=" h-8 w-8 text-black-500"  fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
             </span>
                <span class="absolute flex items-center justify-center w-full h-full text-black transition-all duration-300 transform group-hover:translate-x-full ease">Retour</span>
            <span class="relative invisible">Retour</span>
            </a>
    </div>


</div>
</section>
</main>
	{#{ include('adoption/_delete_form.html.twig') }#}


{% endblock %}
