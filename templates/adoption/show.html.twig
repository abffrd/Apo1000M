                        <table class="table-auto flex justify-around">
                        <tbody  class="table-auto text-center text-xl">				
							<tr>
								<th class="pt-2 m-1 text-left">Statut de l'adoption :</th>
								<td>{{ adoption.statut}}</td>
							</tr>

							<tr>
								<th class="pt-2 m-1 text-left">Adoptant :</th>
								<td>{{ adoption.adoptant.prenom ?? ''}} {{ adoption.adoptant.nom ?? ''}}</td>
							</tr>
							<tr>
								<th class="pt-2 m-1 text-left">Adresse de l'adoptant :</th>
								<td>{{ adoption.adoptant.adresse ?? ''}} {{ adoption.adoptant.nom ?? ''}}</td>
							</tr>
							</tr>
								<th class="pt-2 m-1 text-left"></th>
								<td>{{ adoption.adoptant.codePostal ?? ''}} {{ adoption.adoptant.ville ?? ''}}</td>
							</tr>
							<tr>
								<th class="pt-2 m-1 text-left">Contact :</th>
								<td>{{ adoption.adoptant.email ?? ''}}</td>
							</tr>
							</tr>
								<th class="pt-2 m-1 text-left"></th>
								<td>{{ adoption.adoptant.telephone ?? ''}}</td>
							</tr>

							<tr>
								<th class="pt-2 m-1 text-left">Date d'appel :</th>
								<td>{{ adoption.dateAppel ? adoption.dateAppel|date('Y-m-d') : '' }}</td>
							</tr>
							<tr>
								<th class="pt-2 m-1 text-left">Compte rendu de l'appel :</th>
								<td>{{ adoption.compteRendu }}</td>
							</tr>
							<tr>
								<th class="pt-2 m-1 text-left">Remarque :</th>
								<td>{{ adoption.remarque }}</td>
							</tr>
							<tr>
								<th class="pt-2 m-1 text-left">Bénévoles en charge du dossier :</th>
								<td></td>
							</tr>
							<tr>
								<th >Nom</th>
								<th>Prénom</th>
							</tr>
							{% for user in adoption.users %}
							<tr>
								<td class="">{{ user.nom }}</td>
								<td class="">{{ user.prenom }}</td>
							</tr>
							{% endfor %}
							<tr>
								<th class="pt-2 m-1 text-left">Animaux réservés :</th>
								<td></td>
							</tr>
							<tr>
								<th >Espèce</th>
								<th>Nom</th>
							</tr>
							{% for animal1 in adoption.animal %}
							<tr>
								<td class="">{{ animal1.espece.type }}</td>
								<td class="">{{ animal1.nom }}</td>
							</tr>
							{% endfor %}
							
