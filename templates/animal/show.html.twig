{% extends 'base.html.twig' %}

{% block title %}Animal{% endblock %}

{% block body %}
    <h1>Animal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ animal.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ animal.nom }}</td>
            </tr>
            <tr>
                <th>Date_naissance</th>
                <td>{{ animal.dateNaissance ? animal.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ animal.statut }}</td>
            </tr>
            <tr>
                <th>Tests</th>
                <td>{{ animal.tests }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ animal.sexe }}</td>
            </tr>
            <tr>
                <th>Vaccins</th>
                <td>{{ animal.vaccins }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ animal.photo }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ animal.commentaire }}</td>
            </tr>
            <tr>
                <th>Identification</th>
                <td>{{ animal.identification }}</td>
            </tr>
            <tr>
                <th>Sterilise</th>
                <td>{{ animal.sterilise ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_animal_index') }}">back to list</a>

    <a href="{{ path('app_animal_edit', {'id': animal.id}) }}">edit</a>

    {{ include('animal/_delete_form.html.twig') }}
{% endblock %}
